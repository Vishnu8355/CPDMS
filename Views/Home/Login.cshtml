                                        @*<form class="form-horizontal auth-form">*@
                                        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { AUTOCOMPLETE = "Off", id = "frmLogin" }))
                                        {
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "User name" })
                                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Passwords" })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-terms">
                                                <div class="custom-control custom-checkbox mr-sm-2">
