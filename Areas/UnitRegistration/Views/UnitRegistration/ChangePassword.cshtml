
@{
    <link rel="icon" type="image/x-icon" href="./images/departmentlogo.png">
    ViewData["Title"] = "Change Password";
    Layout = "~/Areas/UnitRegistration/Views/Shared/_UnitRegisLayout.cshtml";
}
<style>
    .small-input {
        width: 400px;
    }

    .center-input {
        margin: 0 auto;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
    }
</style>
<div class="authentication-box">
    <div class="">
        <div class="page-header">
            <div class="">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="page-header-left">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <ol class="breadcrumb pull-right">
                            <li class="breadcrumb-item">
                                <a href="~/UnitRegistration/UnitRegistration/UnitDashboard"><i data-feather="home"></i></a>
                            </li>
                            <li class="breadcrumb-item active">Settings</li>

                            <li class="breadcrumb-item active">Change Password</li>
                        </ol>
                    </div>
                </div>

                <div class="row card lg:w-[67rem] lg:ml-[14rem] ">
                    <div class=" p-0 ">
                        <div class=" tab2-card">
                            <div class="card-body">
                                <ul class="nav nav-tabs nav-material" id="top-tab" role="tablist">
                                    <li class="nav-item"> <a class="nav-link" id="contact-top-tab" data-bs-toggle="tab" href="#top-contact" role="tab" aria-controls="top-contact" aria-selected="false"><span class="icon-unlock me-2"></span><b>Change Password</b></a> </li>
                                </ul>
                                <div role="tabpanel">
                                    @using (Html.BeginForm("ChangePassword", "UnitRegistration", FormMethod.Post, new { enctype = "multipart/form-data", AUTOCOMPLETE = "Off", id = "form1" }))
                                    {
                                        <div class="form-group">
                                            <label for="currentPassword" class="form-label small-input center-input">Current Password <span class="RequiredField">*</span></label>
                                            <input type="text" class="form-control small-input center-input" id="currentPassword" name="CurrentPassword" placeholder="Current Password" required>
                                        </div>

                                        <div class="form-group">
                                            <label for="newPassword" class="form-label small-input center-input">New Password <span class="RequiredField">*</span></label>
                                            <input type="text" class="form-control small-input center-input" id="newPassword" name="NewPassword" placeholder="New Password" required>
                                        </div>

                                        <div class="form-group">
                                            <label for="confirmNewPassword" class="form-label small-input center-input">Confirm New Password <span class="RequiredField">*</span></label>
                                            <input type="text" class="form-control small-input center-input" id="confirmNewPassword" name="ConfirmNewPassword" placeholder="Confirm New Password" required>
                                        </div>

                                        <div class="d-flex justify-content-center space-x-2">
                                            <div class="">
                                                <div class="form-button"> <button class="btn btn-primary" type="submit" style="background: #3f9b53 !important;">Update Password</button> </div>
                                            </div>
                                            &nbsp;
                                            &nbsp;
                                            &nbsp;
                                            &nbsp;
                                            <div class="">
                                                <div class="form-button"> <button class="btn btn-primary" type="reset" style="background: #3f9b53 !important;">Reset</button> </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- <a href="index.html" class="btn btn-primary back-btn"><i data-feather="arrow-left"></i>back</a> -->
            </div>
        </div> <!-- <a href="index.html" class="btn btn-primary back-btn"><i data-feather="arrow-left"></i>back</a> -->
    </div>
</div>

@if (TempData["Message"] != null)
{
    <script>
        swal("", '@TempData["Message"]', "warning");
    </script>
}