
@model CPDMSEF.RegistrationOTPEF
@{
    <link rel="icon" type="image/x-icon" href="./images/departmentlogo.png">
    ViewData["Title"] = "Company RegistrationOTP";
    Layout = "~/Areas/CompanyRegistraion/Views/Shared/_HCRLayout.cshtml";
}


<div class="page-wrapper" style="max-width:  -webkit-fill-available;">
    <div class="authentication-box" style="min-width: 49vw ">
        <div class="container">
            <div class="row card">
                <div class=" p-0 ">
                    <div class=" p-0 ">
                        <div style="background: #024828 !important;color:white; ">
                            <div class="d-flex">

                                <img src="~/Image/departlogo1.png" class="lgcl lgcl1" />
                                <h2 style="margin-left: 5rem; font-size: 2rem; margin-top: 2rem;">ChemIndia</h2>
                            </div>

                        </div>

                    </div>
                </div>
                <div class=" tab2-card ">
                    <div class="card-body">
                        <ul class="nav nav-tabs nav-material" id="top-tab" role="tablist">

                            <li class="nav-item">
                                <a class="nav-link" id="contact-top-tab" data-bs-toggle="tab" href="#top-contact"
                                   role="tab" aria-controls="top-contact" aria-selected="false">
                                    <span class="icon-unlock me-2"></span>OTP
                                </a>
                            </li>
                        </ul>
                        <div role="tabpanel">
                            <form class="form-horizontal auth-form" name="myForm" onsubmit="return validateForm()"
                                  method="post">
                                @Html.HiddenFor(a=>a.UserId)
                                <div class="form-group">
                                    <label>Mobile OTP</label>

                                    <i class="myClass myClass1 fa fa-info-circle " style="color: rgb(32, 10, 10);"
                                       title="Do you like my fa-cog icon?"></i>
                                    <input required="" name="MobileOTP" type="text" class="form-control"
                                           placeholder="Mobile OTP" id="exampleInputEmail12">

                                </div>
                                <div class="form-group">
                                    <label>Email OTP</label>

                                    <i class="myClass myClass1 fa fa-info-circle " style="color: rgb(32, 10, 10);"
                                       title="Do you like my fa-cog icon?"></i>
                                    <input required="" name="EmailOTP" type="text" class="form-control"
                                           placeholder="Email OTP" id="exampleInputEmail12">

                                </div>
                                <div class="form-button">
                                    <button class="btn btn-primary" type="submit"
                                            style="background: #3f9b53 !important;">
                                        Submit
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

