<div class="authentication-box">
    <div class="">
        <div class="page-header">
            <div class="">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="page-header-left">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <ol class="breadcrumb pull-right">
                            <li class="breadcrumb-item">
                                <a href="~/CompanyRegistraion/CompanyRegistration/CompanyDashboard"><i data-feather="home"></i></a>
                            </li>
                            <li class="breadcrumb-item active">Report</li>

                            <li class="breadcrumb-item active">Best Practices</li>
                        </ol>
                    </div>
                </div>
                <div role="tabpanel">
                </div>

                <div class="row card lg:w-[67rem] lg:ml-[14rem] ">
                    <div class=" p-0 ">
                        <div class=" tab2-card">
                            <div class="card-body">
                                <ul class="nav nav-tabs nav-material" id="top-tab" role="tablist">
                                    <li class="nav-item"> <a class="nav-link" id="contact-top-tab" data-bs-toggle="tab" href="#top-contact" role="tab" aria-controls="top-contact" aria-selected="false"><span class="icon-unlock me-2"></span><b>Best Practices</b></a> </li>
                                </ul>
                                @using (Html.BeginForm("BestPractisesReports", "CompanyRegistration", FormMethod.Post, new { AUTOCOMPLETE = "Off", id = "form1" }))
                                {
                                    <div class="row">
                                        <div class="col-sm 2" style="text-align: Left;">
                                    <div class="form-group">
                                        <p>Unit</p>
                                       

                                        @Html.DropDownListFor(m => m.Unit_Code,  ViewBag.ViewUnitList as IEnumerable<SelectListItem>, "-- Select Unit --", new {@class = "form-control" ,@onchange="UnitTagging()", autofocus = "autofocus", required = "required"})
                                    </div>

                                   </div>
                                        <div class="col-sm" style="text-align: Left;">
                                            <div class="form-button">
                                                <input type="submit" value='Show Report' class="btn btn-primary" name="Submit" id="Submit" />
                                            </div>
                                        </div>
                                    </div>
                                }
                                <br />
                                @if (ViewBag.ViewBestPractices != null)
                                {
                                    var Practises = ViewBag.ViewBestPractices[0];
                                    <h5>Following the Chemical Management Strategy’s Compliance Guidelines as Best Practises within organization </h5>

                                    <br />
                                    <div role="tabpanel">


                                        <div>

                                            <div class="form-group">
                                                <label>@Practises.Q1</label>
                                                <br />
                                                @*                                                Answer :@Practises.Q1Radio
                                            *@                                                <br />
                                                <textarea class="form-control" name="chemicalSafety" placeholder="Mention details in not more than 300 words" maxlength="300" disabled>@Practises.Q1Answer </textarea>
                                            </div>
                                            <div class="form-group">
                                                <label>@Practises.Q2</label>
                                                <br />
                                                @*                                                Answer :@Practises.Q2Radio
                                            *@                                                <br />

                                                <textarea class="form-control" name="chemicalManagement" placeholder="Retailers need to have a strong chemical policy (RSL), and it needs to be updated, maintained, and effectively communicated.Active oversight of the policy’s compliance" disabled>@Practises.Q2Answer</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label> @Practises.Q3</label>
                                                <br />
                                                @*     Answer :@Practises.Q3Radio*@
                                                <br />

                                                <textarea class="form-control" name="restrictionTesting" disabled>@Practises.Q3Answer</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label>@Practises.Q4</label>
                                                <br />
                                                @*                                                Answer :@Practises.Q4Radio
                                            *@                                                <br />
                                                <textarea class="form-control" name="supplierAdmin" disabled>@Practises.Q4Answer</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label>@Practises.Q5</label>
                                                <br />
                                                @*                                                Answer :@Practises.Q5Radio
                                            *@                                                <br />
                                                <textarea class="form-control" name="materialsPurchasing" disabled>@Practises.Q5Answer</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label>@Practises.Q6</label>
                                                <br />
                                                @*                                                Answer :@Practises.Q6Radio
                                            *@                                                <br />

                                                <textarea class="form-control" name="training" disabled>@Practises.Q6Answer</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label>@Practises.Q7</label>
                                                <br />
                                                @*                                                Answer :@Practises.Q7Radio
                                            *@                                                <br />

                                                <textarea class="form-control" name="auditing" disabled>@Practises.Q7Answer</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label>@Practises.Q8</label>
                                                <br />
                                                @*                                                Answer :@Practises.Q8Radio
                                            *@                                                <br />
                                                <textarea class="form-control" name="futureReadiness" disabled>@Practises.Q8Answer</textarea>
                                            </div>


                                        </div>

                                    </div>
                                }
                                else
                                {
                                    <h4>No data availabe for selected unit</h4>
                                }
                            </div>
                        </div>
                    </div>
                </div> <!-- <a href="index.html" class="btn btn-primary back-btn"><i data-feather="arrow-left"></i>back</a> -->
            </div>
        </div> <!-- <a href="index.html" class="btn btn-primary back-btn"><i data-feather="arrow-left"></i>back</a> -->
    </div>
</div>

